/etc/init/kkuziri.conf

description "uWSGI server instance configured to serve kkuziri"

start on runlevel [2345]
stop on runlevel [!2345]

setuid scvgoe
setgid www-data

env PATH=/home/scvgoe/kkuziri/venv/bin
chdir /home/scvgoe/kkuziri
exec uwsgi --ini myproject.ini




/etc/nginx/sites-available/kkuziri

server {
    listen 80;
    server_name server_domain_or_IP;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:/home/user/myproject/myproject.sock;
    }
}
